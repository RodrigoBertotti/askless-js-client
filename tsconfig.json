{
  "compilerOptions": {
    "module": "AMD",
    "target": "ES5",
    "declaration": true,
    "outDir": "dist/types",
    "moduleResolution": "node",
    "stripInternal": true,
    "removeComments": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "example",
    "scripts"
  ]
}
